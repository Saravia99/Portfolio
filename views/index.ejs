<%- include('partials/header.ejs') %>

<body>
    <main>
        <!-- THUMBNAILS GALLERY -  EJS & MONGODB -->
        <div class="container-fluid gx-0 d-flex">
            
            <div class="row gx-0">
    
                <% thumbnailsList.forEach(thumbnail => { %>

                    <div class="col-md-4 title">
                        <h3 class="text-center"><%= thumbnail.title %></h3>
                        <a href="#">
                            <img class="img-fluid" src="<%= thumbnail.src %>" 
                            alt="<%= thumbnail.altText %>">
                        </a>
                    </div>
             
                <%})%>
                
            </div>
        </div>
    </main>

<%- include('partials/footer.ejs') %>

</body>
</html>